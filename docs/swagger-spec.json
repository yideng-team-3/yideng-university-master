  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "UpdateUserDto": {
        "type": "object",
        "properties": {}
      },
      "CreateCourseDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "课程标题",
            "example": "Web3入门课程"
          },
          "description": {
            "type": "string",
            "description": "课程描述",
            "example": "这是一门Web3入门课程，介绍区块链基础知识"
          },
          "contentUrl": {
            "type": "string",
            "description": "课程内容URL（S3地址）",
            "example": "https://bucket-name.s3.region.amazonaws.com/courses/video.mp4"
          },
          "thumbnailUrl": {
            "type": "string",
            "description": "课程缩略图URL",
            "example": "https://bucket-name.s3.region.amazonaws.com/thumbnails/image.jpg"
          },
          "creatorAddress": {
            "type": "string",
            "description": "创建者钱包地址",
            "example": "0x1234..."
          }
        },
        "required": [
          "title",
          "description",
          "contentUrl",
          "creatorAddress"
        ]
      },
      "UpdateCourseDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "课程标题",
            "example": "Web3入门课程"
          },
          "description": {
            "type": "string",
            "description": "课程描述",
            "example": "这是一门Web3入门课程，介绍区块链基础知识"
          },
          "contentUrl": {
            "type": "string",
            "description": "课程内容URL（S3地址）",
            "example": "https://bucket-name.s3.region.amazonaws.com/courses/video.mp4"
          },
          "thumbnailUrl": {
            "type": "string",
            "description": "课程缩略图URL",
            "example": "https://bucket-name.s3.region.amazonaws.com/thumbnails/image.jpg"
          },
          "creatorAddress": {
            "type": "string",
            "description": "创建者钱包地址",
            "example": "0x1234..."
          }
        }
      },
      "PublishCourseOnchainDto": {
        "type": "object",
        "properties": {
          "courseId": {
            "type": "string",
            "description": "课程ID",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "price": {
            "type": "number",
            "description": "课程价格(YD代币)",
            "example": 100
          }
        },
        "required": [
          "courseId",
          "price"
        ]
      }
    }
  }
